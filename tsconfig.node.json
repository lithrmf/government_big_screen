{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "outDir": "./dist/node",
    // 使用明确支持的模块类型
    "module": "node20",
    "moduleResolution": "nodenext",
    "types": ["node"],
    // 确保没有禁用输出
    "noEmit": false
  }
}
